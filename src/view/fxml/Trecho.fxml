<AnchorPane prefHeight="500.0" prefWidth="801.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.TrechoController">
   <children>
      <Pane fx:id="paneTrecho" blendMode="SRC_ATOP" layoutX="505.0" layoutY="48.0" prefHeight="364.0" prefWidth="277.0" style="visibility: false;">
         <children>
            <TextField fx:id="tfOrigem" layoutX="114.0" layoutY="14.0" />
            <TextField fx:id="tfDestino" layoutX="114.0" layoutY="52.0" />
            <TextField fx:id="tfQuilometragem" layoutX="114.0" layoutY="86.0" />
            <TextField fx:id="tfTaxaEmbarque" layoutX="114.0" layoutY="121.0" />
            <TextField fx:id="tfValorSeguro" layoutX="114.0" layoutY="158.0" />
            <TextField fx:id="tfValorPassagem" layoutX="114.0" layoutY="197.0" />
            <TextField fx:id="tfTempoDuracao" layoutX="114.0" layoutY="233.0" />
            <Label layoutX="7.0" layoutY="237.0" text="Tempo de Duração" />
            <Label layoutX="6.0" layoutY="125.0" text="Taxa de Embarque" />
            <Label layoutX="8.0" layoutY="201.0" text="Valor da Passagem" />
            <Label layoutX="5.0" layoutY="162.0" text="Valor do Seguro" />
            <Label layoutX="7.0" layoutY="90.0" text="Quilometragem" />
            <Label layoutX="7.0" layoutY="56.0" text="Cidade de Destino" />
            <Label layoutX="7.0" layoutY="18.0" text="Cidade de Origem" />
            <Label fx:id="lbValorTotal" layoutX="6.0" layoutY="273.0" prefHeight="17.0" prefWidth="217.0" />
            <Button fx:id="btSalvaTrecho" layoutX="171.0" layoutY="306.0" mnemonicParsing="false" onAction="#saveOrUpdateTrecho" prefHeight="25.0" prefWidth="98.0" text="Salvar" />
            <Button fx:id="btDeleteTrecho" layoutX="53.0" layoutY="306.0" mnemonicParsing="false" onAction="#deleteTrecho" prefHeight="25.0" prefWidth="101.0" text="Excluir" />
         </children>
      </Pane>
      <TableView fx:id="tabelaTrecho" layoutX="14.0" layoutY="29.0" prefHeight="401.0" prefWidth="477.0">
        <columns>
          <TableColumn fx:id="cOrigem" prefWidth="140" text="Origem" />
          <TableColumn fx:id="cDestino" prefWidth="138.0" text="Destino" />
           <TableColumn fx:id="cQuilometragem" prefWidth="112.0" text="Quilometragem" />
           <TableColumn fx:id="cValorTotal" prefWidth="90.0" text="Valor" />

        </columns>
      </TableView>
      <Button fx:id="criarTrecho" layoutX="153.0" layoutY="440.0" mnemonicParsing="false" onAction="#viewCreateTrecho" prefHeight="25.0" prefWidth="135.0" text="Criar novo trecho" />
      <Button fx:id="verTrecho" layoutX="304.0" layoutY="440.0" mnemonicParsing="false" onAction="#seeTrecho" prefHeight="25.0" prefWidth="179.0" text="Visualizar trecho selecionado" />
      <Pane fx:id="paneImg" blendMode="SRC_ATOP" layoutX="494.0" layoutY="5.0" prefHeight="364.0" prefWidth="298.0" style="visibility: true;">
         <children>
            <ImageView fitHeight="263.0" fitWidth="264.0" layoutX="18.0" layoutY="87.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../resources/trecho.png" />
               </image>
            </ImageView>
         </children>
      </Pane>
   </children>
</AnchorPane>
